      DIGPRG(_NAME"-4") \
      DIGPRG(_NAME"-5") \
      DIGPRG(_NAME"-6") \
      DIGPRG(_NAME"-7") \
      DIGPRG(_NAME"-8") \
      DIGPRG(_NAME"-9")

      DIGPRGS("h0")
      DIGPRGS("h1")
