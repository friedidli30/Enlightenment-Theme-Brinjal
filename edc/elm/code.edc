/* simple layout to pack our scrolling content into an elm_layout */
group { name: "elm/code/layout/default";
   alias: "efl/code/layout";
   data {
      item: "font.name" "Mono";
      item: "font.size" "10";
   }
   parts {
      part { name: "elm.swallow.content"; type: SWALLOW;
         description { state: "default" 0.0;
            align: 0.5 0.0;
            fixed: 0 1;
         }
      }
   }
}
